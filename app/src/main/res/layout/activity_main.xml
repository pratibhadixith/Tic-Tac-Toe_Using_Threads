<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.prati.mp4.MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="Tic Tac Toe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/A3"
        android:background="@android:color/holo_blue_light"
        android:layout_marginStart="33dp"
        android:layout_alignBottom="@+id/A1"
        android:layout_toEndOf="@+id/A2" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/B1"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/A1"
        android:layout_alignStart="@+id/A1"
        android:layout_marginTop="23dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/B2"
        android:background="@android:color/holo_blue_light"
        android:layout_alignBottom="@+id/B1"
        android:layout_alignStart="@+id/A2" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/B3"
        android:background="@android:color/holo_blue_light"
        android:layout_alignBottom="@+id/B2"
        android:layout_alignStart="@+id/A3" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/C1"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/B1"
        android:layout_alignStart="@+id/B1" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/C2"
        android:background="@android:color/holo_blue_light"
        android:layout_alignBottom="@+id/C1"
        android:layout_alignStart="@+id/B2" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/C3"
        android:background="@android:color/holo_blue_light"
        android:layout_alignBottom="@+id/C2"
        android:layout_alignStart="@+id/B3" />

    <Button
        android:text="Start Game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/A2"
        android:background="@android:color/holo_blue_light"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/A1" />

    <Button
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/A1"
        android:background="@android:color/holo_blue_light"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/start"
        android:layout_toStartOf="@+id/A2" />

</RelativeLayout>
